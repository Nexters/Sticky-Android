<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_radius_small_item_main_badge"
        android:minWidth="172dp"
        android:minHeight="60dp">

    <ImageView
            android:id="@+id/img_badge"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:src="@mipmap/monthly_badge_monthly_10_locked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_badge"
            style="@style/Text.Headline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary_black"
            app:layout_constraintStart_toEndOf="@id/img_badge"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1 hour" />

    <TextView
            android:id="@+id/tv_remaining_time"
            style="@style/Text.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingTop="1dp"
            android:textColor="@color/primary_black"
            app:layout_constraintBottom_toBottomOf="@id/img_badge"
            app:layout_constraintStart_toEndOf="@id/img_badge"
            app:layout_constraintTop_toBottomOf="@id/tv_badge"
            tools:text="23분 남음" />

</androidx.constraintlayout.widget.ConstraintLayout>